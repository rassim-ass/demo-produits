<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Demo Produits{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('/css/bootstrap.css') }}"/>
        <link rel="stylesheet" href="{{ asset('/css/bootstrap-responsive.css') }}"/>
        <link rel="stylesheet" href="{{ asset('/css/style.css') }}"/>
        <link rel="stylesheet" href="{{ asset('/css/font-awesome.css') }}"/>
        <link rel="stylesheet" href="{{ asset('/css/font-awesome.min.css') }}"/>
        <link rel="stylesheet" href="{{ asset('/css/sb-admin-2.css') }}"/>

        <!-- DataTables CSS -->
        <link href="{{ asset('https://cdn.datatables.net/1.10.11/css/jquery.dataTables.min.css') }}" rel="stylesheet">




    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <button class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse" type="button">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="brand" href="{{ path('ecommerce_homepage') }}">Demo produits</a>

            <div class="nav-collapse collapse">
                <div class="navbar-form pull-right">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

                        <button class="btn btn-primary" > <a href="{{ path('fos_user_security_logout') }}" style="color: #FFFFFF !important;"><i class="fa fa-sign-out fa-fw"></i> DÃ©connexion</a></button>
                        {% else %}
                            <button class="btn btn-primary" > <a href="{{ path('fos_user_security_login') }}" style="color: #FFFFFF !important;"><i class="fa fa-sign-in fa-fw"></i> Se connecter</a></button>

                    {% endif %}
                </div>
