                        <button type="submit" class="btn">Rechercher</button>
                    </form>
                    -->
            </div>
        </div>
    </div>
</div>
<div class="container">
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    <ul class="nav nav-pills">
        <li><a href="{{ path('ecommerce_homepage') }}">Accueil</a>

        </li>
        <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                Categories <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li><a href="{{ path('categorie_new') }}" >Ajouter une categorie</a></li>
                <li><a href="{{ path('categorie_index') }}">Gestion des categories</a></li>
            </ul>
        </li>
        <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                Tags <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li><a href="{{ path('tag_new') }}" >Ajouter un tag</a></li>
                <li><a href="{{ path('tag_index') }}">Gestion des tags</a></li>
            </ul>
        </li>
        <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                Produits <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li><a href="{{ path('produit_new') }}" >Ajouter un Produit</a></li>
                <li><a href="{{ path('produit_index') }}">Gestion des produits</a></li>
            </ul>
        </li>

        <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                Images <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li><a href="{{ path('image_new') }}" >Ajouter une image</a></li>
                <li><a href="{{ path('image_index') }}">Gestion des images</a></li>
            </ul>
        </li>
    </ul>
    {% endif %}
    {% block body %}{% endblock %}


</div>
<hr/>

<footer id="footer" class="vspace20">
    <div class="container">


        <div class="row">
            <div class="span12">
                <p> Demo Produits</p>
            </div>
        </div>
    </div>
</footer>

<script src="{{ asset('/js/jquery-1.10.0.min.js') }}"></script>
<script src="{{ asset('/js/bootstrap.js') }}"></script>
