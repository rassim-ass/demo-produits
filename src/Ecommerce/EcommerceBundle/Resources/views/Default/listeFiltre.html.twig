{% extends '::base.html.twig' %}
{% block body %}
<!--
<div id="page-wrapper">
-->



    <!-- /.row -->

    <div class="row">



            <!--tableau catalogue produit -->
            <div class="span12">

                <div class="panel panel-default">

                <a href="{{ path('ecommerce_homepage') }}" class="btn btn-info"><i class="fa fa-angle-left"> Retour à l'accueil</i></a>


            <h3 class="page-header">Résultats de votre recherche</h3>

            </div>


                    <!-- /.panel-heading -->
                    <div class="panel-white">
                        <div class="dataTable_wrapper">
                            <table class="table table-striped table-hover" id="dataTables-example">

                                <thead>

                                <tr>


                                    <th>image</th>

                                    <th>Titre</th>
                                    <th>Description</th>
                                    <th>Date</th>

                                    <th>Prix</th>
                                    <th>Poids</th>


                                </tr>

                                </thead>
                                <tbody>
                                {% for produit in produits %}

    <tr class="gradeA">

        <td><a href="{{ path('ecommerce_show', { 'id': produit.id }) }}"><img
                        src="{{ produit.vignette }}" width="100px" height="100px"/></a>
        </td>

        <td>
            <a href="{{ path('ecommerce_show', { 'id': produit.id }) }}">{{ produit.titre }}</a>
        </td>
        <td>{{ produit.description |striptags|slice(0, 35) }}...<br><a
                    href="{{ path('ecommerce_show', { 'id': produit.id }) }}" class="btn btn-info"> En savoir
                plus</a>
        </td>

        <td>{% if produit.date %}{{ produit.date|date('Y-m-d ') }}{% endif %}</td>
        <td>{{ produit.prix }}</td>
        <td>{{ produit.poids }}</td>


    </tr>

{% endfor %}


                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-6 -->
            <!--tableau catalogue produit -->
        </div>


        <!-- /.row -->
    </div>

    <!-- /#page-wrapper -->
    {% endblock %}
    {% block javascripts %}

        <script>
            $(document).ready(function () {
                $('#dataTables-example').DataTable({
                    responsive: true,
                    "sDom": '<"mot"f><"top"l>rt<"bottom"ip><"clear">'

                });


            });
        </script>
    {% endblock %}