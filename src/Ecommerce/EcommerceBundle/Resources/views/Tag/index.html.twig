{% extends 'base.html.twig' %}

{% block body %}
<a href="{{ path('tag_new') }}" class="btn btn-success">Ajouter un tag</a>
<hr>

<h4>Liste des tags</h4>

<table class="table table-bordered table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Titre</th>

        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for tag in tags %}
    <tr>
        <td><a href="{{ path('tag_show', { 'id': tag.id }) }}">{{ tag.id }}</a></td>
        <td>{{ tag.nom }}</td>

        <td>

            <a href="{{ path('tag_show', { 'id': tag.id }) }}" class="btn btn-info ">Detail</a>

            <a href="{{ path('tag_edit', { 'id': tag.id }) }}" class="btn btn-primary ">Modifier</a>

        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>



{% endblock %}
